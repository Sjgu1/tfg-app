<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sergiojuliogu.myapplication">

    <uses-sdk tools:overrideLibrary="android.support.v17.leanback" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Registro"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.VERSION"
                android:value="25.3.1"
                tools:replace="android:value" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AvatarsActivity"
            android:excludeFromRecents="true"
            android:label="Avatares"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".ProjectActivity"
            android:label="Proyecto"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProfileActivity"
            android:label="Editar Perfil"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NewProjectActivity"
            android:label="Nuevo Proyecto"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PruebaActivity"
            android:label="Editar Perfil"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchUserActivity"
            android:label="Agregar Usuario"
            android:parentActivityName=".ProjectActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity android:name=".UpdateProjectActivity"
            android:label="Actualizar Proyecto"
            android:parentActivityName=".ProjectActivity"
            />
        <activity android:name=".SprintsActivity" />
        <activity
            android:name=".SprintActivity"
            android:label="@string/title_activity_sprint"></activity>
    </application>

</manifest>